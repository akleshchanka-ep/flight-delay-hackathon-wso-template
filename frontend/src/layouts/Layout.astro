---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="autumn">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Flight Delay Prediction App" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://unpkg.com/htmx.org@2.0.4"></script>
  </head>
  <body>
    <div class="min-h-screen bg-base-200">
      <!-- Navigation Bar -->
      <div class="navbar bg-primary text-primary-content shadow-lg">
        <div class="flex-1">
          <a href="/" class="btn btn-ghost text-xl">✈️ Flight Delay Predictor</a>
        </div>
        <div class="flex-none">
          <ul class="menu menu-horizontal px-1">
            <li><a href="/">Home</a></li>
            <li><a href="/predict">Quick Predict</a></li>
            <li><a href="/custom">Custom Predict</a></li>
          </ul>
        </div>
      </div>

      <!-- Main Content -->
      <main class="container mx-auto px-4 py-8">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="footer footer-center p-10 bg-base-300 text-base-content mt-16">
        <aside>
          <svg
            width="50"
            height="50"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            fill-rule="evenodd"
            clip-rule="evenodd"
            class="inline-block fill-current"
          >
